#!/bin/sh
set -eu
# Put Custom Ad-hoc scripts after build. Like framework specific checks, etc.

# Symfony Asset Mapper
# https://symfony.com/doc/current/frontend/asset_mapper.html
# Ideally this should be part of composer auto-scripts, but it's not Symfony's default yet. Set it here for the out-of-the-box experience.
if [ -f "bin/console" ] && grep -q "asset-mapper" composer.json 2>/dev/null; then
    php bin/console importmap:install --no-interaction || true
    php bin/console asset-map:compile --no-interaction || true
fi